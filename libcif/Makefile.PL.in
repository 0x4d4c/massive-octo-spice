use 5.014002;
use ExtUtils::MakeMaker;
use ExtUtils::MakeMaker::CPANfile;

sub MY::libscan {
    my( $mm, $file ) = @_;
    return if $file =~  /\.(swp|in)$/; # SKIP
    return $file;
}

sub MY::postamble {
    return <<'MAKE_FRAG';

deps:
	cpanm --installdeps .

MAKE_FRAG
}

WriteMakefile(
    NAME            => 'CIF',
    VERSION         => '@CIF_VERSION@',
	EXE_FILES	    => ['bin/cif'],
    NO_META         => 1,
    NO_MYMETA       => 1,
);
