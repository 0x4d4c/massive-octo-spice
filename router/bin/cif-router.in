#!/usr/bin/env perl

BEGIN {
    require File::Spec;
    require Cwd;
    my @libs = ("@CIF_PATH@/lib");
    my $bin_path;

    for my $lib (@libs) {
        unless ( File::Spec->file_name_is_absolute($lib) ) {
            $bin_path ||= ( File::Spec->splitpath(Cwd::abs_path(__FILE__)) )[1];
            $lib = File::Spec->catfile( $bin_path, File::Spec->updir, $lib );
        }
        unshift @INC, $lib;
    }

}

use CIF qw/init_logging $Logger/;
use CIF::Router;
use Getopt::Long;
use AnyEvent;
use Data::Dumper;

my $help;
my $man;
my $frontend    = CIF::Router::DEFAULT_FRONTEND_LISTEN();
my $backend     = CIF::Router::DEFAULT_BACKEND_LISTEN();
my $storage     = 'elasticsearch';
my $auth        = 'DUMMY',
my $daemon      = 0;
our $debug      = 0;
my $verbosity   = 0;

my $config = $ENV{'HOME'}.'/.cif';

Getopt::Long::Configure ("bundling");
GetOptions(
    'help|h'        => \$help, 
    'config|C=s'    => \$config,
    'frontend|F=s'  => \$frontend,
    'backend|B=s'   => \$backend,
    'debug|d'       => \$debug,
    'verbosity|v'   => \$verbosity,
) or die(usage());

die(usage()) if($help);

$debug = $verbosity if($verbosity);
$debug = 1;
$daemon = 1;
sub usage {
    return <<EOF;

Usage: $0 [OPTION]

 Options:
    -F, --frontend=STRING   specify the frontend binding, default: $frontend
    -B, --backend=STRING    specify the backend binding, default: $backend
    -C, --config=FILE       specify cofiguration file, default: ~/.cif 
    -d, --debug             turn on debugging
    -v, --verbosity         turn up debug verbosity [1-10]
    -h, --help              this message       

 Examples:
    $0 -C /path/to/cif.conf

EOF
}
$debug = ($debug) ? 'DEBUG' : 'ERROR';

init_logging($debug);

my $router = CIF::Router->new({
    frontend_listen     => $frontend,
    backend_listen      => $backend,
    storage             => {
        plugin  => $storage,
    },
    auth                => {
        plugin  => $auth,
    },
});

$router->startup();
my $done = AnyEvent->condvar();
$SIG{'INT'} = sub { $done->send(); };
$SIG{'KILL'} = sub { $done->send(); };
$done->recv();
