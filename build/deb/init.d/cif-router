#!/bin/sh
#
# /etc/init.d/cif-router -- startup script
#
### BEGIN INIT INFO
# Provides:          cif-router
# Required-Start:    $network $named
# Required-Stop:     $network $named
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Starts cif-router
# Description:       Starts cif-router using start-stop-daemon
### END INIT INFO

PATH=/bin:/usr/bin:/sbin:/usr/sbin:/opt/cif/bin
NAME=cif-router
DESC="CIF Router"
DEFAULT_CIF=/etc/default/cif
DEFAULT=/etc/default/$NAME

if [ `id -u` -ne 0 ]; then
    echo "You need root privileges to run this script"
    exit 1
fi


. /lib/lsb/init-functions

if [ -r /etc/default/rcS ]; then
    . /etc/default/rcS
fi


# The following variables can be overwritten in $DEFAULT

# Run as this user ID and group ID
CIF_USER=cif
CIF_GROUP=cif

# Directory where the distribution resides
CIF_HOME=/opt/cif/

# log directory
LOG_DIR=/var/log/$NAME

# data directory
DATA_DIR=/var/lib/$NAME

# work directory
WORK_DIR=/tmp/$NAME

# configuration directory
CONF_DIR=/etc/$NAME

# configuration file
CONF_FILE=$CONF_DIR/cif-router.conf

# End of variables that can be overwritten in $DEFAULT

# overwrite settings from default file
if [ -f "$DEFAULT_CIF" ]; then
    . "$DEFAULT_CIF"
fi

if [ -f "$DEFAULT" ]; then
    . "$DEFAULT"
fi

# Define other required variables
PID_FILE=/var/run/$NAME.pid
DAEMON=$CIF_HOME/bin/cif-router
DAEMON_OPTS="-d -p $PID_FILE -C $CONF_FILE"

# Check DAEMON exists
test -x $DAEMON || exit 0

case "$1" in
  start)
    log_daemon_msg "Starting $DESC"

    pid=`pidofproc -p $PID_FILE cif-router`
    if [ -n "$pid" ] ; then
        log_begin_msg "Already running."
        log_end_msg 0
        exit 0
    fi

    # Prepare environment
    mkdir -p "$LOG_DIR" "$DATA_DIR" "$WORK_DIR" && chown "$CIF_USER":"$CIF_GROUP" "$LOG_DIR" "$DATA_DIR" "$WORK_DIR"
    touch "$PID_FILE" && chown "$CIF_USER":"$CIF_GROUP" "$PID_FILE"

    # Start Daemon
    start-stop-daemon --start -b --user "$CIF_USER" -c "$CIF_USER" --pidfile "$PID_FILE" --exec $DAEMON -- $DAEMON_OPTS
    log_end_msg $?
    ;;      
  stop)
    log_daemon_msg "Stopping $DESC"

    if [ -f "$PID_FILE" ]; then 
        start-stop-daemon --stop --pidfile "$PID_FILE" \
            --user "$CIF_USER" \
            --retry=TERM/20/KILL/5 >/dev/null
        if [ $? -eq 1 ]; then
            log_progress_msg "$DESC is not running but pid file exists, cleaning up"
        elif [ $? -eq 3 ]; then
            PID="`cat $PID_FILE`"
            log_failure_msg "Failed to stop $DESC (pid $PID)"
            exit 1
        fi
        rm -f "$PID_FILE"
    else
        log_progress_msg "(not running)"
    fi
    log_end_msg 0
    ;;
  status)
    status_of_proc -p $PID_FILE cif-router cif-router && exit 0 || exit $?
    ;;
  restart|force-reload)
    if [ -f "$PID_FILE" ]; then
        $0 stop
        sleep 1
    fi
    $0 start
    ;;
  *)
    log_success_msg "Usage: $0 {start|stop|restart|force-reload|status}"
    exit 1
    ;;
esac

exit 0